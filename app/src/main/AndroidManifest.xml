        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <activity android:name=".Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BookView.SchoolBookView.pdf">
        </activity>
        <activity android:name=".ReaderBook.pdf" />
        <activity android:name=".ReaderBook.BookDetails" />
        <activity android:name=".ReaderBook.BookList" />
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.AboutActivity" />
        <activity android:name=".Activity.TimeTableActivity" />
        <activity android:name=".NewsView.GlobalNewsDet.NewsDetailView"/>
    </application>

</manifest>